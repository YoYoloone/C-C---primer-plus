//函数引用就是你给苍老师取地别的名字，你不叫她苍老师，你叫她女神。
#include<iotream>

using namespace std;
 int main(){

int a =666;          //定义一个你女神苍老师住的变量。里面住了666个苍老师

int &b=a;            //现在苍老师退休了，你还可以叫她苍老师，但是你选择叫她苍井空，因为你不喜欢她了，感觉她太恶心了。

cout<<"a"<<a<<endl;
cout<<"b"<<b<<endl;
         b=2;       //现在苍老师家，不对，苍井空家，只有两个仓井空了，那苍老师家还有几个仓井空？（两个）
cout<<"a"<<a<<endl;
cout<<"b"<<b<<endl;

cout<<"&a"<<&a<<endl;
cout<<"&b"<<&b<<endl;

}
/*
a 666
b 666

a 2 
b 2
 &a  x0FFFFFF;
 &b  x0FFFFFF;
 
 */
 
